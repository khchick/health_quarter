<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1"> 
    <link rel="shortcut icon" type="favicon" href="images/favicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
    {{!-- Import page title from ViewRouter.js --}}
    <title>{{title}}</title>
    
    {{!-- Import CSS from ViewRouter.js --}}
    {{#each css}}
        <link rel="stylesheet" href="../../css/{{this}}" /> 
    {{/each}}
</head>

<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }
    </script>
    
    {{!-- Header --}}
    <header>
        <div class="topnav" id="myTopnav">
            <a href="/" id="logo" class="active">HealthQuarter</a>
            <a href="/" id="home" >HOME</a>
            {{!-- Update tag ID for food after data is fixed --}}
            <a href="/tag/15">FOOD</a>
            {{!-- Update tag ID for drinks after data is fixed --}}
            <a href="/tag/16">DRINKS</a>
            <a href="/mealplans">MEAL PLANS</a>
            <a href="/recipeFinder">RECIPES</a>
            <a href="/favouriteRest" id="favourite">FAVOURITES</a>
            <a href="/profile" id="profile">MY ACCOUNT</a>
            <a href="/signup" id="signup">SIGN UP</a>
            <a href="/login" id="login">SIGN IN</a>
            <a href="/logout" id="logout">LOGOUT</a>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
    </header>

    {{{body}}} 
    
    {{!-- Footer --}}
    <footer>
        <div class="footerwrapper">
