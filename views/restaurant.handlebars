
<div class="container">
    <header>
        <h1>Health Quarter</h1>
        <p>Logged in as: <strong><span>{{user}}</span></strong></p>
    </header>
    <div class="row no-gutters" id="mainContent">
        <div class="col-12 col-md-6 order-md-last" id="myNotes">
            <div class="container bg-light">
                <h2 id="myNotesTitle">Restaurants</h2><p id="alert">&nbsp;</p>
                <div id="noteList">
                    {{#each notes}}
                    <div class="noteContainerBig">
                        <div class="noteContainer" data-id="{{id}}">
                            <div><a href="#" class="noteLink" data-id="{{id}}"><p>{{this.title}}</p></a></div>
                            <div class="btnLinks">
                                <a href="#" class="save" data-id="{{id}}"><i class="far fa-save"></i></a>
                                <a href="#" class="remove" data-id="{{id}}"><i class="far fa-trash-alt"></i></a>
                            </div>
                        </div>
                        <textarea class="form-control noteContent" data-id="{{id}}" rows="3">{{this.content}}</textarea>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 order-md-first" id="newNote">
            <div class="container bg-light">
                <h2>Add new note</h2>
                <form action="/notes" method="post">
                    <div class="form-group">
                        <label for="noteTitle">Title</label>
                        <input class="form-control" id="noteTitle" type="text" placeholder="Your note title">
                    </div>
                    <div class="form-group">
                        <label for="noteArea">Content</label>
                        <textarea class="form-control" id="noteArea" rows="3" placeholder="Your note content"></textarea>
                    </div>
                    <div style="text-align: center"><button type="submit" class="btn btn-primary" id="submitBtn">Submit</button></div>
                </form>
            </div>
        </div>
    </div>
</div>